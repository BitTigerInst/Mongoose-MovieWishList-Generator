
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css"/>


<script>
  $(document).ready(function ($) {
    $('.try_slider').slick({
      arrows:true,
      autoplay:true,
      autoplaySpeed:1500
    });
});
</script>


<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="text-success">About this movie... </h2><a href="/users/<%=current_user.id%>"><button class="btn btn-primary navbar-right">Go Back</button></a>
      <div class="col-sm-6 text-left">


      			<h3><strong><%=@movie['original_title']%><strong></h3>

      		<img src="http://image.tmdb.org/t/p/w500<%=@movie['poster_path']%>" style="height:auot;"class="img-responsive">
        </div>
        <div id = "overview" class="col-sm-6">
            <h3>Overview</h3>
              <strong><p><b><%=@movie['overview']%></b></p>
              <p><b>Release Date: </b> <%=@movie['release_date']%></p>
              <p><b>vote average: </b><%=@movie['vote_average']%></p>
              <p><b>vote count: </b><%=@movie['vote_count']%></p>
              <p>
                <b>Languages: </b>
                <% @movie['spoken_languages'].each do |l| %>
                <%=l['name']  %>
                <%end%>
              </p>
              <p><i><%=@movie['tagline']%></i></p></strong>
          </div>
          <div class="col-sm-6">
            <h3>take a peek</h3>
            <div class="try_slider">
              <% @movie_images.each do |m|%>
                <div><button type="button" class="slick-prev">Previous</button><img src="http://image.tmdb.org/t/p/w500<%=m['file_path']%>" class="img-responsive">
                <button type="button" class="slick-next">Next</button></div>
              <%end%>
            </div>
          </div>

          </div>
            <div class="col-sm-10 col-sm-offset-1">
              <h3>Trailer</h3>
              <div id = "trailer">
                    <%if @movie_trailer['site'] == 'YouTube' %>
                      <iframe width="100%"  height="450px"
                        src="http://www.youtube.com/embed/<%=@movie_trailer['key']%>">
                      </iframe>
                    <% end %>
              </div>
            </div>
  </div>
  </div>
</div>
